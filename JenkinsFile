pipeline {
    agent any
    tools {
        nodejs 'node-12'
    }
    stages{
        stage('clone repository'){
            steps {
                echo 'cloning repository...'
                git 'https://github.com/Faithkym7/Week2IP1.git'
            }
        }
        stage('installing dependencies'){
            steps {
                echo 'installing dependencies...'
                sh 'npm install'
            }
        }
        stage('Build project') {
            steps {
                echo 'Building...'
                sh 'npm run build'
            }
        }
        
    }
}